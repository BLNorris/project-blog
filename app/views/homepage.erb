

<% @posts.each do |p| %>
  <div class="post">
    <div class="post_title">
      <a href="/post/<%= p.id %>"><%= p.title %></a>
    </div>
    <div class="post_content">
      <%= p.content %>
    </div>
  </div>
<% end %>

<% #pagination %>
<div class="pagination">
Page 
<% @post_pages.each do |pp| %>
  <a href="/?page=<%= pp.index +1 %>"><%= pp.index + 1 %></a>
<% end %>
</div>