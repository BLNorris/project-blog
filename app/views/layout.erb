<html>
	<head>
		<title><%= @set.site_title %></title>
		<link rel = "stylesheet" type="text/css" href="/animate.css">	
		<link rel = "stylesheet" type="text/css" href="/theme.css">	

    <header>
    <div class = "blog_name"><%= @set.site_name %></div>
    
    <div class = "header_nav"><% #put page links here %>
      <a href="/">Home</a>
      <% @pages.each do |p| %>
        | <a href="/page/<%= p.id %>"><%= p.title %></a>
        <% end %>
    </header>
      
      
	</head>
	<body>
    <div class="content">
      <%= yield %>
    </div>
    <div class="sidebar">
      
      Recent Posts
      <% posts = Post.find(:all, :order => "id desc", :limit => 16).reverse %>
        <% posts.each do |p|%>
          <div>
            <a href="/post/<%= p.id %>">
              <%= p.title %>
            </a>
          
          </div>
        <% end %>
      
      
      <div class="admin_link">
        <a href="/admin/settings">Admin</a>  <br>
      </div>
    </div>
	</body>
  
</html>
